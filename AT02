#include<stdio.h>

int main(){

    int operac;
    float a, b;

	printf("Digite a operacao que deseja realizar ou sair:\n"
	"1-somar\n"
  "2-Subtrair\n"
  "3-Multiplicar\n"
  "4-Dividir\n"
  "0-Sair\n");
  scanf("%d", &operac);

        while(operac != 0){

            if(operac == 1){
                printf("Somar\n"
                "Digite os valores:\n");
                scanf("%f%f", &a, &b);
                printf("Resultado da operacao: %.2f\n\n", a + b);
            }

            if(operac == 2){
                printf("Subtarir\n"
                "Digite os valores:\n");
                scanf("%f%f", &a, &b);
                printf("Resultado da operacao: %.2f\n\n", a - b);
            }

            if(operac == 3){
                printf("Multiplicar\n"
                "Digite os valores:\n");
                scanf("%f%f", &a, &b);
                printf("Resultado da operacao: %.2f\n\n", a * b);
            }


            if(operac == 4){

                printf("Dividir\n"
                "Digite os valores:\n");
                scanf("%f%f", &a, &b);
                    if(b != 0){
                        printf("Resultado da operacao: %.2f\n\n", a / b);
                    }       else{
                                printf("Nao eh possivel divisao por zero.\n\n");
                            }
            }

        printf("Digite a operacao que deseja realizar ou sair:\n");
        scanf("%d", &operac);

    }

        printf("Sair.\n");
        
    return 0;
}
