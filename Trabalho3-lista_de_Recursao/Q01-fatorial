#include <stdio.h>

int fatorial(int n);

int main()
{
	int n;

	printf("Digite um numero inteiro nao negativo:\n");
	scanf("%d", &n);  

	printf("O fatorial de %d eh: %d\n", n, fatorial(n));

	return 0;
}

int fatorial(int n)
{
	if(n == 0 || n == 1)
	{
		return 1;
	}
	else
	{
		return n * fatorial(n - 1);
	}	
}
