#include <stdio.h>

int somatorio(int n);

int main()
{
	int n;
	printf("Digite um numero para obter o seu somatorio com seus antecessores a partir de 1:\n");
	scanf("%d", &n);

	printf("A soma eh: %d", somatorio(n));

	return 0;
}

int somatorio(int n)
{
	if(n == 0)
	{
		return 0;
	}
	else
	{
		return n + somatorio(n - 1);
	}	
}
