#include<stdio.h>

int fatorial(int a);

int main(){
    int a, fat;
    
    printf("Digite o valor:\n");
    scanf("%d", &a);
    
    fatorial(a);
    
        if(fat == 0 || fat > 0){
            printf("O fatorial de %d eh: %d", a, fatorial(a));
        }else{
            printf("Nao eh possivel calcular o fatorial de %d.", a);
        }
    return 0;
}

int fatorial(int a){
        int i, fat;
        
        if(a == 0){
            fat = 1;
        }
        
        for(i = 1, fat = 1; i <= a; i++){
            fat = fat * i;
        }
    
    return fat;
}
